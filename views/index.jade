extends layout

block content
	div#userInfoCont
		h1= title
		p Welcome to our test
		input(data-bind='click:getUsers' type='button' value='Get Users')
		// Wrapper
		#wrapper

			// USER LIST
			h2 User List
			#userList
			table
				thead
					th UserName
					th Email
					th Delete?
				tbody(data-bind='foreach:userList')
					tr 
						td(data-bind='text:username, "data-id":id, click:$parent.getUser')
						td(data-bind='text:email')
						td(data-bind='click:$parent.removeUser') Delete
				// /USER LIST

		// /WRAPPER